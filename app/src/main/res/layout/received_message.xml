<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constLayreciever"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:maxWidth="270dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

        <TextView
            android:id="@+id/receiverMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello how are you"
            android:textIsSelectable="true"
            android:padding="10dp"
            android:maxWidth="270dp"
            android:background="@drawable/received_message"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/recieverImage"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/recieverImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        android:padding="2dp"
        android:layout_gravity="center"
        android:background="@drawable/image_section"
        android:src="@drawable/myimage"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/chooseImg"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:background="#1D1D1D"
        android:src="@drawable/myimage"
        android:layout_below="@id/recieverImage"
        android:visibility="visible"/>

</RelativeLayout>