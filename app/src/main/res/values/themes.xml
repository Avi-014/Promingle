<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Promingle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#1D1D1D</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Dialog">
        <item name="android:windowBackground">
            @drawable/empty_bg</item>
        <item name="windowNoTitle">true</item>
        <item name="windowFixedWidthMajor">80pt</item>
        <item name="android:windowAnimationStyle">@style/Animate</item>
    </style>

    <style name="Animate">
        <item name="android:windowEnterAnimation">@anim/slide_scale_in</item>
        <item name="android:windowExitAnimation">@anim/slide_scale_out</item>
    </style>

    <style name="Theme.Promingle" parent="Base.Theme.Promingle" />
</resources>